@{
    Layout = "~/Views/Shared/_imgLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddToGallery</title>
</head>
<body>
    <div class="col-sm-2" style="height:500px">

    </div>
    <div class="col-sm-9" align="center" style="background-color:ghostwhite; width:800px">

        <h2 align="center" style="font-family: 'Buxton Sketch'; color: #e96519">Hey ! Here is Your Album</h2><br />
        <h3 align="center" style="font-family:'Buxton Sketch'">View all your Photos any time, anywhere.. Its always there, Always free !</h3><br />
        <table class="table table-striped table-bordered">
            <thead>

                <tr></tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {


                    <div align="right" class="col-sm-3">
                        <a href="#" rel="" title="Image 1" class="thumbnail" style="background-color: white">

                            <img src="~/UploadImages/@s.Name" class="img-rounded" width="300" height="300" alt="Title Text" />
                            <h3 align="center" style="font-family :'SketchFlow Print'"><font color="#e96519">@s.Catogory</font></h3>
                        </a>
                    </div>

                }
            </tbody>
        </table>

    </div>

</body>
</html>
