                                &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                &nbsp;&nbsp; &nbsp;
                                Terms and Conditions

                            </footer>
                        </blockquote>*@

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-xs-5">

                                <input type="submit" id="submit" value="Create Account" class="btn btn-success active" />
                            </div>

                        </div>

                        <blockquote>

                            <footer>All copyrights reserved</footer>
                        </blockquote>

                    </form>
                    </div>
                </div>
                </div>

</body>

</html>







